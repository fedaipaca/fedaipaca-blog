---
import "../styles/global.css";
import { resolvePath } from "../lib/utils";

// get page title from props
const { title } = Astro.props;
const pageTitle = title ? `${title} | fedaipaca;` : "fedaipaca;";

// get path name to highlight active link
const { pathname } = Astro.url;

const canonicalURL = new URL(pathname, Astro.site);

const navLinks = [
  { href: resolvePath("/"), text: "Home" },
  { href: resolvePath("/contact"), text: "Contact" },
];

const homePageUrl = resolvePath("/");
const faviconUrl = resolvePath("/favicon.ico");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={faviconUrl} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <title>{pageTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col font-sans antialiased text-neutral-900 bg-stone-100">
    <!-- navigation -->
    <header class="border-b border-neutral-400 fixed top-0 inset-x-0 bg-stone-100">
      <div class="max-w-4xl mx-auto h-14 px-2 flex items-stretch justify-between font-mono">
        <div class="h-full flex">
          <a href={homePageUrl} class="self-stretch flex items-center px-2 text-lg font-bold hover:underline"
            >fedaipaca;</a
          >
        </div>

        <nav class="h-full flex">
          {
            navLinks.map((link) => (
              <a
                href={link.href}
                class:list={["self-stretch flex items-center px-2", { underline: pathname === link.href }]}
              >
                {link.text}
              </a>
            ))
          }
        </nav>
      </div>
    </header>
    <!-- end navigation -->

    <main class="max-w-4xl w-full mx-auto grow pt-14">
      <!-- hero -->

      <slot name="hero" />

      <!-- end hero -->

      <!-- posts -->
      <section class="px-4 py-8">
        <slot />
      </section>
      <!-- posts end -->
    </main>

    <!-- footer -->
    <footer class="border-t border-neutral-400">
      <div class="max-w-4xl mx-auto px-4 py-8 space-y-4 md:flex md:items-center md:justify-between md:space-y-0">
        <p class="text-sm text-neutral-600 font-mono">
          <span class="block">Â© 2025 fedaipaca;</span>
          <span class="mt-1 block">// Code Blog, well-commented thoughts.</span>
        </p>
        <nav class="text-center">
          {
            navLinks.map((link) => (
              <a href={link.href} class="text-sm text-neutral-600 font-mono px-2 ">
                {link.text}
              </a>
            ))
          }
        </nav>
      </div>
    </footer>
  </body>
  <!-- footer end -->
</html>
